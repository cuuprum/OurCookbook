<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:theme="@style/AppTheme"
    android:fitsSystemWindows="true"
    tools:context="iak.intermediate.hydrargyrum.ourmoviebook.activity.DetailMovieActivity">
    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1"
        android:background="@color/colorWhite">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="@dimen/activity_vertical_margin">
            <TextView
                android:id="@+id/detail_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Title goes here"
                android:textSize="32dp"
                android:textStyle="bold"
                android:textColor="@color/colorWhite"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                android:background="@color/colorPrimary"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:weightSum="1">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="10"
                    android:paddingTop="16dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:gravity="left|center_horizontal"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/gambar_movie"
                        android:layout_weight="2"
                        android:layout_width="0dp"
                        android:layout_height="212dp"
                        android:paddingTop="1sp"
                        android:layout_marginBottom="0sp"
                        android:layout_marginLeft="0sp"
                        android:layout_marginRight="0sp"
                        android:layout_marginTop="0sp"
                        android:layout_gravity="left"
                        android:src="@drawable/ic_image"
                        android:text="GAMBAR"
                        android:textColor="#4cd"
                        android:textStyle="bold"/>
                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="212dp"
                        android:layout_weight="4"
                        android:layout_marginBottom="10dp"
                        android:orientation="vertical"
                        android:paddingLeft="24dp"
                        android:paddingRight="24dp"
                        android:paddingBottom="10dp"
                        android:weightSum="1">
                        <TextView
                            android:id="@+id/id"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:visibility="gone"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/title_release_date"
                            android:text="Release Date "
                            android:layout_alignParentLeft="true"
                            android:textColor="#000"
                            android:textStyle="bold"/>
                        <TextView
                            android:id="@+id/release_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@id/title_release_date"
                            android:text="release_date"
                            android:textColor="#000"
                            android:textStyle="normal"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/title_popularity"
                            android:text="Popularity "
                            android:layout_alignParentLeft="true"
                            android:layout_below="@id/title_release_date"
                            android:textColor="#000"
                            android:textStyle="bold"/>
                        <TextView
                            android:id="@+id/popularity"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@id/title_popularity"
                            android:layout_below="@id/release_date"
                            android:text="popularity"
                            android:textColor="#000"
                            android:textStyle="normal"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/title_vote_average"
                            android:text="Vote Average "
                            android:layout_alignParentLeft="true"
                            android:layout_below="@id/title_popularity"
                            android:textColor="#000"
                            android:textStyle="bold"/>
                        <TextView
                            android:id="@+id/vote_average"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/popularity"
                            android:layout_toRightOf="@id/title_vote_average"
                            android:text="vote_average"
                            android:textColor="#000"
                            android:textStyle="normal" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/title_vote_count"
                            android:text="Vote Count "
                            android:layout_alignParentLeft="true"
                            android:layout_below="@id/title_vote_average"
                            android:textColor="#000"
                            android:textStyle="bold"/>
                        <TextView
                            android:id="@+id/vote_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/vote_average"
                            android:layout_toRightOf="@id/title_vote_count"
                            android:text="vote_count"
                            android:textColor="#000"
                            android:textStyle="normal"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/vote_count"
                            android:layout_alignParentBottom="true"
                            android:paddingTop="10dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/mark_as_favourite"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"

                                android:drawableTop="@drawable/ic_star"
                                android:gravity="center|center_horizontal"
                                android:text="Mark As Favorite"
                                android:textColor="@color/colorBlack"
                                android:textStyle="normal" />

                            <TextView
                                android:id="@+id/delete"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center|center_horizontal"
                                android:drawableTop="@drawable/ic_star_grey"
                                android:text="Remove As Favorite"
                                android:textColor="@color/colorBlack"
                                android:textStyle="normal" />
                        </LinearLayout>
                    </RelativeLayout>
                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:id="@+id/title_overview"
                    android:text="Overview "
                    android:layout_below="@id/title_vote_average"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:gravity="left|center_horizontal"
                    android:textColor="#000"
                    android:textSize="20sp"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/overview"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="3"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:gravity="left|center_horizontal"
                    android:text="Overview goes here"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/colorBackground"
                    android:textStyle="normal"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</FrameLayout>
